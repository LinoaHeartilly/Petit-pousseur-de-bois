{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="page_connexion">
    <img src="{{asset('images/lock.png')}}"/>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Déjà connecté en tant que  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1></h1>
        <div class="formulaire_connexion">
            <div>
                <label for="inputUsername">Identifiant</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus>
            </div>
            <div>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
            </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
        </div>
    </form>
<div>
{% endblock %}
